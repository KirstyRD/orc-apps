package std.video;

unit FFmpegUtil:

	int MAX_FRAME_SIZE = 100000;
	int MAX_NB_FRAME = 10;

	@native procedure ffmpeg_initSource()
	end
	
	@native procedure ffmpeg_closeSource()
	end

	@native procedure ffmpeg_readFrame(
		uint(size=8) frameBuffer[MAX_NB_FRAME][MAX_FRAME_SIZE], 
		int frameSize[MAX_NB_FRAME][1],
		int index
	)
	end
	
end