			==>
	guard
		cIdx = 2 and sizeOfTU = 4 and RCskip = 0
	var
		int(size=8) tuSize = 4,
		int(size=16) block[4*4]
	do
		if(transfSkipFlag = 1) then
			transform_4x4_skip_chroma_zscan(chrBlk_v, coeff, 4);
			// reorderTu(block, tuSize);
		else
			// transform_4x4(block, coeff, 1);
			transform_4x4_zscan(chrBlk_v, coeff, 1, 0);
		end

		// reorderTu(block, tuSize);
		incIdx(tuSize);
