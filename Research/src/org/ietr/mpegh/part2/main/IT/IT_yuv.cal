		int(size=16) block[4*4]
	do
		if(transfSkipFlag = 1) then
			transform_4x4_skip_chroma_zscan(chrBlk_u, coeff, 4);
			// reorderTu(block, tuSize);
		else
			// transform_4x4(block, coeff, 1);
			transform_4x4_zscan(chrBlk_u, coeff, 1, 0);
		end

		// reorderTu(block, tuSize);
		incIdx(tuSize);
		numPartToSend := 4;
	end
	
